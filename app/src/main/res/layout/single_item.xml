<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="5dp"
    app:cardMaxElevation="7dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewCover"
            android:layout_width="231dp"
            android:layout_height="148dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="@string/desc"
            android:gravity="end"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/recyclerItemName"
            android:layout_width="156dp"
            android:layout_height="58dp"
            android:layout_alignTop="@+id/imageViewCover"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="-24dp"
            android:layout_toStartOf="@+id/imageViewCover"
            android:gravity="center_horizontal"
            android:text="Name"
            android:textColor="#100D0D"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/recyclerItemWinrate"
            android:layout_width="127dp"
            android:layout_height="58dp"
            android:layout_below="@+id/recyclerItemName"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/imageViewCover"
            android:gravity="center_horizontal"
            android:text="Winrate"
            android:textColor="#100D0D"
            android:textSize="16sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>